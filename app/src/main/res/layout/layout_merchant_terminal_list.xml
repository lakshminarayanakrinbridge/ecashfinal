<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashier Name"
            android:textColor="#000000"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/cashiername_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="User_1"
            android:textSize="20dp"
            android:textColor="#000000"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:layout_marginTop="3dp"
            android:textColor="#000000"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/mobilenumber_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="User_1"
            android:textSize="20dp"
            android:textColor="#000000"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail Id"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/emailid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="User_1"
            android:textSize="20dp"
            android:textColor="#000000"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminal Id"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/terminalid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="User_1"/>


             <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="Edit"
                 android:background="@color/colorButton"
                 android:textColor="#FFFFFF"
                  android:onClick="onClickEditTerminal"/>


    <View
        android:id="@+id/view1"
        android:layout_below="@+id/layout_five"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000000"
        />

</LinearLayout>